# Neutralizar mapeamentos de erro (evita 503 “fantasma”)
ErrorDocument 503 default
ErrorDocument 502 default
ErrorDocument 500 default
<IfModule mod_headers.c>
  Header unset Retry-After
</IfModule>

# ----------------------------------------------------------------------
# Canonicalização: primeiro host, depois HTTPS (sem loops)
# ----------------------------------------------------------------------
RewriteEngine On

# 1) Forçar WWW (independente do HTTPS/X-Forwarded-Proto)
RewriteCond %{HTTP_HOST} !^www\.innovatech-zone\.com$ [NC]
RewriteRule ^ https://www.innovatech-zone.com%{REQUEST_URI} [R=301,L]

# 2) Forçar HTTPS (compatível com proxy/CDN)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# 3) /index.php -> /  (deixa o PrestaShop decidir /pt/, /en/, …)
#    Só em pedidos diretos do browser; não afeta rewrites internos
RewriteCond %{THE_REQUEST} \s/+index\.php(?:\?|\s) [NC]
RewriteRule ^index\.php$ / [R=301,L]

# ----------------------------------------------------------------------
# PrestaShop — front controller & webservice (necessário p/ /pt/)
# ----------------------------------------------------------------------
RewriteBase /
RewriteCond %{HTTP:Authorization} .
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
RewriteCond %{REQUEST_FILENAME} -s [OR]
RewriteCond %{REQUEST_FILENAME} -l [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
RewriteRule ^api/?(.*)$ webservice/dispatcher.php?url=$1 [QSA,NC,L]
RewriteRule . index.php [QSA,L]

# ----------------------------------------------------------------------
# Segurança básica
# ----------------------------------------------------------------------
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>
Options -Indexes -MultiViews

# ----------------------------------------------------------------------
# Compressão Brotli / Gzip
# ----------------------------------------------------------------------
<IfModule mod_brotli.c>
  BrotliCompressionQuality 5
  BrotliAlterETag On
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css application/javascript application/json application/xml image/svg+xml
</IfModule>
<IfModule mod_deflate.c>
  SetEnvIfNoCase Request_URI "\.(?:gz|bz2|br)$" no-gzip=1
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json application/xml image/svg+xml
</IfModule>
<IfModule mod_headers.c>
  Header append Vary "Accept-Encoding"
</IfModule>

# ----------------------------------------------------------------------
# Caching
# ----------------------------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 day"
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/avif "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff  "access plus 1 year"
</IfModule>
<IfModule mod_headers.c>
  <FilesMatch "\.(?:html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  <FilesMatch "\.(?:css|js)$">
    Header set Cache-Control "public, max-age=604800"
  </FilesMatch>
  <FilesMatch "\.(?:png|jpe?g|gif|webp|avif|svg|ico)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
  <FilesMatch "\.(?:woff2?|otf|ttf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
